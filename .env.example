# AI-Powered Learning Platform Environment Configuration

# ======================
# Gemini API Configuration
# ======================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyCBv8jNE-5K8Ojs0UumdeBL_Zba68b4e18

# ======================
# JWT Configuration
# ======================
# Secret key for JWT token signing (use a strong, random key in production)
JWT_SECRET=mySecretKey123456789012345678901234567890
# Token expiration time in milliseconds (24 hours = 86400000)
JWT_EXPIRATION=86400000

# ======================
# Server Configuration
# ======================
# Backend server port
SERVER_PORT=8081
# Frontend development server port
FRONTEND_PORT=3000
# Server context path
SERVER_CONTEXT_PATH=/api

# ======================
# Database Configuration
# ======================
# File-based storage paths
DATA_PATH=./data
UPLOADS_PATH=./uploads

# ======================
# CORS Configuration
# ======================
# Allowed origins for CORS (comma-separated for multiple origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ======================
# File Upload Configuration
# ======================
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE=50
# Maximum request size (in MB)
MAX_REQUEST_SIZE=50

# ======================
# Logging Configuration
# ======================
# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO
# Log file path
LOG_FILE_PATH=./logs/application.log

# ======================
# Application Configuration
# ======================
# Application name
APP_NAME=AI Learning Platform
# Application version
APP_VERSION=1.0.0
# Environment (development, staging, production)
APP_ENVIRONMENT=development

# ======================
# Security Configuration
# ======================
# Enable/disable security features
SECURITY_ENABLED=true
# Password encryption strength (4-31, higher is more secure but slower)
BCRYPT_STRENGTH=10

# ======================
# AI Configuration
# ======================
# Gemini API URL
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent
# Default quiz question count
DEFAULT_QUIZ_QUESTIONS=5
# Default IQ test question count
DEFAULT_IQ_QUESTIONS=5
# AI request timeout (in seconds)
AI_REQUEST_TIMEOUT=30

# ======================
# Cache Configuration
# ======================
# Enable/disable caching
CACHE_ENABLED=true
# Cache TTL in seconds
CACHE_TTL=3600

# ======================
# Email Configuration (Optional)
# ======================
# SMTP server configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS_ENABLED=true

# ======================
# Analytics Configuration (Optional)
# ======================
# Google Analytics tracking ID
GA_TRACKING_ID=
# Enable/disable analytics
ANALYTICS_ENABLED=false

# ======================
# Feature Flags
# ======================
# Enable/disable specific features
FEATURE_AI_QUIZ_GENERATOR=true
FEATURE_COURSE_SUMMARIZER=true
FEATURE_IQ_ASSESSMENT=true
FEATURE_RECOMMENDATIONS=true
FEATURE_FILE_UPLOAD=true
FEATURE_EMAIL_NOTIFICATIONS=false

# ======================
# Development Configuration
# ======================
# Enable/disable development features
DEV_MODE=true
# Enable/disable debug logging
DEBUG_ENABLED=true
# Enable/disable hot reload
HOT_RELOAD=true
